<main class="modal fade" id="newClassified" tabindex="-1" role="dialog" aria-labelledby="newClassifiedLabel" aria-hidden="true">
  <article class="modal-dialog" role="document">
    <section class="modal-content">
      <section class="modal-header">
        <h2 class="modal-title" id="exampleModalLabel">Novo Classificado</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </section>
      <section class="modal-body">
            <label for="recipient-title" class="col-form-label">Titulo:</label>
            <input type="text" class="form-control" id="recipient-title">
           
            <label for="recipient-content" class="col-form-label">Descrição:</label>
            <input type="text" class="form-control" id="recipient-content">
      </section>
      <section class="modal-footer">
        <button type="button" class="btn btn-primary">Enviar</button>
      </section>
    </section>
  </article>
</main>